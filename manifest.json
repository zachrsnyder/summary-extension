{
    "manifest_version": 3,
    "name": "I Ain't Readin Allat",
    "version": "1.0",

    "permissions":  [
        "scripting",
        "activeTab"
    ],
    "action":{
        "default_popup": "index.html",
        "default_popup_options": {
            "width": 800, 
            "height": 600, 
            "left": 100,  
            "top": 100 
          }
    },

    "content_scripts":  [
        {
            "matches":  [
                "<all_urls>"
            ]
        }
    ]
}
  
